{
  "compilerOptions": {
      "skipLibCheck": true,
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es2017",
      "resolveJsonModule": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "./dist",
      "baseUrl": ".",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "allowJs": true,
      "lib": [
          "es2019"
      ],
      "paths": {
          "*": [
              "node_modules/*"
          ]
      }
  },
  "include": [
      "src/**/*"
  ]
}